# ========================================
# MKG WEB APPLICATION - Environment Variables
# ========================================
# Copy file ini menjadi .env dan sesuaikan nilai-nilainya
# cp .env.example .env
# ========================================

# App Version
NEXT_APP_VERSION=v1.4.4

# ========================================
# API Configuration
# ========================================
# Base URL untuk Backend API (Shared dengan APP-EMPLOYEE & APP-DRIVER)
NEXT_APP_API_URL=https://apimkglocal.makkuragatama.id
NEXT_PUBLIC_API_URL=https://apimkglocal.makkuragatama.id

# Development: http://localhost:3333
# Staging: https://api-staging.yourdomain.com
# Production: https://apimkglocal.makkuragatama.id

# ========================================
# NextAuth Configuration
# ========================================
# Secret key untuk NextAuth JWT (generate dengan: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_SECRET_KEY=your-secret-key-here

# NextAuth URL
# Development: http://localhost:3005
# Production: https://pwa.makkuragatama.id
NEXTAUTH_URL=http://localhost:3005

# Trust host header
NEXTAUTH_TRUST_HOST=true

# ========================================
# JWT Configuration
# ========================================
NEXT_APP_JWT_SECRET=your-jwt-secret
NEXT_APP_JWT_TIMEOUT=86400
NEXT_APP_JWT_TIMEOUT_REMEMBER=604800

# ========================================
# Google Maps API
# ========================================
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ========================================
# OCR Service (OCR.space)
# ========================================
OCR_SPACE_API_KEY=your-ocr-api-key

# ========================================
# AWS Configuration (S3 Storage)
# ========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1

# ========================================
# Node Environment
# ========================================
# development | production | test
NODE_ENV=development

# ========================================
# Electron Build Flag (optional)
# ========================================
# Set to 'true' when building for Electron desktop
# ELECTRON_BUILD=false
