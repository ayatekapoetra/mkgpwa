{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "MKG DeskApp",
  "version": "1.0.0",
  "identifier": "com.makkuragatama.femkgpwa",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3005",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "MKG DeskApp",
        "url": "http://localhost:3005",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../.next",
      "../node_modules",
      "../public",
      "../package.json",
      "../next.config.js",
      "../server-standalone.js",
      "../.env.production"
    ]
  },
  "plugins": {
    "store": {
      "path": ".store.json"
    },
    "fs": {
      "scope": ["$APPDATA/*", "$APPDATA/**"]
    },
    "sql": {
      "scope": ["sqlite:offline.db"]
    }
  }
}